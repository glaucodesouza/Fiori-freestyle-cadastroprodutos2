<mvc:View
    controllerName="fiorinet.cadastroprodutos3.controller.Create"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Page
 	title="Criar Novo Produto"
 	showNavButton="true"
 	navButtonPress=".onNavBack"
 	floatingFooter="true">
        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            title="Produto"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false"
            >

                <Label text="Codigo" />         
                <Text id="inpCodigo"         
                        text="{
                            path: 'view>/Codigo',
                            type: 'sap.ui.model.type.Integer',
                            constraints:{
                                minimum:0
                            }
                        }"
                    />

                <Label text="Descricao" />      <Input id="inpDescricao"     valueLiveUpdate="true"/>
                
                <Label text="Quantidade" />     
                <Input  id="inpKwmeng"       
                        value="{
                            path: 'view>/Kwmeng',
                            type: 'sap.ui.model.type.Decimal',
                            constraints:{
                                minimum:0
                            }
                        }"
                    />
                
                <Label text="UM" />             <Input id="inpMeins"        />
                
                <Label text="Preço Unitário" /> <Input id="inpNetpr"       
                        value="{
                            path: 'view>/Netpr',
                            type: 'sap.ui.model.type.Decimal',
                            constraints:{
                                minimum:0
                            }
                        }"
                    />

                <Label text="Moeda" />          <Input id="inpWaerk"        />

        </f:SimpleForm>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Accept" text="Gravar"     press="onGravar" />
                <Button type="Reject" text="Cancelar"   press="onCancelar "/>
            </OverflowToolbar>
        </footer>
 	</Page>
</mvc:View>